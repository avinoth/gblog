<%= link_to 'New Article', new_article_path %>
<br>

    <% @articles.each do |article| %>
      
        <h3><%= link_to article.title, article %></h3>
        <p><%= article.content %></p>
        Tags: <%= raw article.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
        <br>
        <%= link_to 'Edit Article', edit_article_path(article) %>
        
    <% end %>
  